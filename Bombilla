//Programa que cambia y muestra los estados de una bombilla
//Autora: Denisse Alfaro
//2017
public class Bombilla{
  
  private boolean estado = true;
  
  public Bombilla(){
    estado = false;
  }
  
  public Bombilla(boolean estado){
    this.estado = estado;
  }
  
  public void encender(){
    estado = true; //El this no es imprecindible
  }
  
  public void apagar(){
    this.estado = false;
  }
  
  public void consultarEstado(){
    if(estado == true){
      System.out.println("Encendida");
    }else{
      System.out.println("Apagada");
    }
  }
}
